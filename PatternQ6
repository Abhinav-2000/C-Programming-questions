//print the following pattern

1 2 3 4 5
2 3 4 5
3 4 5
4 5
5


// c++ code for the given pattern

#include <stdio.h>
using namespace std;

int main()
{
  int n = 5;
  
  for(int i = 1; i <= n; i++)
  {
    if(i == 1 || i == n)
      {
        for(int j = 1; j <= n-i+1; j++)
          {
            cout << i+j-1 << " ";     //single space
          }
      }
      else
      {
        for(int j = 1; j <= n-i+1; j++)
          {
            if(j == 1)
            {
              cout << i <<" ";
            }
            else if(j == n-i+1)
            {
              cout << n << " ";
            }
            else{
              cout << "  ";         //double space
            }
          }
      }
      cout << endl;
  }
}
