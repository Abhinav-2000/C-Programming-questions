n = 5;


* 
* * 
* * * 
* * * * 
* * * * * 


*************************************************************** C++ CODE FOR THE FOLLOWING PATTERN *******************************************************

#include <iostream>
using namespace std;

int main()
{
   int n = 5;

  for(int i = 1; i <= n; i++)
    {
      for(int j = 1; j <= i; j++)
        {
          cout << "* ";
        }
      cout << endl;
    }
}
