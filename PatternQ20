******************************************************** C++ CODE FOR THE FOLLOWING PATTERN **************************************************************

#include <iostream>
using namespace std;

int main()
{
  int n = 4;
  int val;
  for(int i = 1; i <= n; i++)
    {
      for(int j = 1; j <= i; j++)
        {
          cout << i+2;
        }
      val = i+2;
      cout << endl;
    }

  
  for(int i = n-1; i > 0; i--)
    {
      for(int j = 1; j <= i; j++)
        {
          cout << val-1;
        }
      cout << endl;
      val--;
    }
}
