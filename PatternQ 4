// print the following pattern for

n = 6 


     * 
    * * 
   * * * 
  * * * * 
 * * * * * 
* * * * * * 


******************************************************* C++ CODE FOR THE FOLLOWING PATTERN *****************************************************************

#include <iostream>
using namespace std;

int main()
{
  int n = 6;

  for(int i = 1; i <= n; i++)
    {
      for(int s = 1; s <= n - i; s++)
        {
          cout << " ";
        }
      for(int j = 1; j <= i ; j++)
        {
          cout << "* "; //star with single space
        }
      cout << endl;
    }
}
