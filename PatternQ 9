//print the following pattern for

n = 5;


1 
1 2 
1   3 
1     4 
1 2 3 4 5 

*************************************************************** C++ CODE FOR THE FOLLOWING PATTERN *******************************************************

#include <iostream>
using namespace std;

int main()
{
  int n = 5;

  for(int i = 1; i <= n; i++)
    {
      if(i == 1 || i == n)
      {
        for(int j = 1; j <= i; j++)
        {
          cout << j << " ";
        }
      }
      else
      {
        for(int j = 1; j <= i; j++)
        {
          if(j == 1 || j == i)
          {
            cout << j << " ";
          }
          else
          {
            cout << "  ";
          }
        }
      }
      cout << endl;
    }
}
